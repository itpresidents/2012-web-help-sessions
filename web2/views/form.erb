        <textarea name="statement"></textarea>

        <p>
          <input type="radio" name="desserts" value="brownies"/> Brownies
        </p>
        <p>
          <input type="radio" name="desserts" value="cookies"/> Cookies
        </p>
        <p>
          <input type="radio" name="desserts" value="cake"/> Cake
        </p>

        <input type="submit" value="Submit!" />
      </form>

  </body>
</html>
